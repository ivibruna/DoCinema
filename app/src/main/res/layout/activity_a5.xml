<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000">

    <LinearLayout
        android:id="@+id/llViewMovie"
        android:layout_width="373dp"
        android:layout_height="620dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:weightSum="12"
        tools:context=".activities.A5ViewMovie"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackViewMovie"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#000000"
            android:drawableRight="@drawable/ic_back"
            android:drawableTint="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#000000"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:rippleColor="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/got" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="2dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tvFilm"
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:text="Film"
                        android:textColor="@color/grey_titles"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="NAME FILM"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="year"
                        android:textColor="@color/grey_titles" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="date"
                        android:textColor="@color/grey_titles" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription1"
            android:layout_width="357dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Description"
            android:textColor="@color/grey_titles"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDescription2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Descripcion de la elicula en cuestion que estamos visualizando, donde se cuenta una pequeÃ±a parte de la trama obtenida de la API que estamos utilizando en la aplicacion"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvStarring"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Starring by:"
            android:textColor="@color/grey_titles"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvStarring2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Antonio Banderas"
            android:textColor="#FFFFFF"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDirected1"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Directed by:"
            android:textColor="@color/grey_titles"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDirected2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Quentin Tarantino"
            android:textColor="#FFFFFF"
            android:textStyle="normal" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditMovie"
        android:layout_width="145dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:accessibilityLiveRegion="none"
        android:background="@color/yellow"
        android:backgroundTint="@color/yellow"
        android:drawableLeft="@drawable/ic_edit"
        android:drawableTint="@color/black"
        android:fontFamily="@font/alata"
        android:text="EDIT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>