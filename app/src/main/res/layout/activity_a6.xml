<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/llAddMovie"
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:weightSum="12"
        app:layout_constraintBottom_toTopOf="@+id/btnAddMovie2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421"
        tools:context=".activities.A6AddMovie">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackAddMovie"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#000000"
            android:drawableRight="@drawable/ic_back"
            android:drawableTint="#FFFFFF"
            android:textColor="#000000"
            app:backgroundTint="#000000"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:rippleColor="@color/white"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="303dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="420dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/_a330c90cab01cf2e3444775826d0f40" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="2dp"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tvAddFilm"
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="6dp"
                        android:layout_weight="1"
                        android:text="Film"
                        android:textColor="@color/grey_titles"
                        android:textStyle="bold" />
                </LinearLayout>

                <EditText
                    android:id="@+id/tvAddTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:hint="NAME FILM"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#66FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="61dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/tvAddYear"
                        android:layout_width="71dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:hint="year"
                        android:textColor="@color/white"
                        android:textColorHint="#66FFFFFF"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck" />

                    <EditText
                        android:id="@+id/tvAddDate"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:hint="date"
                        android:textColor="@color/white"
                        android:textColorHint="#66FFFFFF"
                        android:textSize="14sp"
                        tools:ignore="TouchTargetSizeCheck" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvAddDescription1"
            android:layout_width="357dp"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Description"
            android:textColor="@color/grey_titles"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ptDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:ems="10"
            android:hint="Desciption text"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#66FFFFFF"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvAddStarring"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Starring by:"
            android:textColor="@color/grey_titles"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ptStarring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:ems="10"
            android:hint="Actor's name"
            android:inputType="textPersonName"
            android:textColorHint="#66FFFFFF"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tvAddDirected1"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Directed by:"
            android:textColor="@color/grey_titles"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/ptDirected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="6dp"
            android:ems="10"
            android:hint="Director's name"
            android:inputType="textPersonName"
            android:textColorHint="#66FDFDFD"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddMovie2"
        android:layout_width="145dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:accessibilityLiveRegion="none"
        android:background="@color/yellow"
        android:backgroundTint="@color/yellow"
        android:drawableLeft="@drawable/ic_upload"
        android:drawableTint="@color/black"
        android:fontFamily="@font/alata"
        android:text="UPLOAD"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>